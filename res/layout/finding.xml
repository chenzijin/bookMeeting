<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/shu_background" >
    <TableLayout 
        android:layout_width ="fill_parent"
        android:layout_height ="fill_parent"
        android:stretchColumns="1"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="100sp"
            android:layout_height="34dp"
            android:layout_marginLeft="200sp"
            android:gravity="center"
            android:text="TextView" />

         <TableRow>
            <TextView 
                android:text="书名："
                android:id="@+id/TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText 
                android:text=""
                android:id="@+id/findingBookEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </TableRow>
        
        <TableRow>
            <TextView 
                android:text="时间："
                android:id="@+id/TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText 
                android:text=""
                android:id="@+id/findingTimeEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </TableRow>
        <TableRow>
            <TextView 
                android:text="地点："
                android:id="@+id/TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText 
                android:text=""
                android:id="@+id/findingAddEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                
                />
        </TableRow>
        <TableRow>
            <TextView 
                android:text="备注："
                android:id="@+id/TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText 
                android:text=""
                android:id="@+id/findingElseEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               
                />
        </TableRow>
        <TableRow android:gravity="right">
            <Button 
                android:text="取消"
                android:id="@+id/findingCancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button 
                android:text="创建"
                android:id="@+id/FindingNewButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
    </TableLayout>
   


</LinearLayout>

